<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zunyi.carpo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/login_screen_title"
            android:name=".CarpoActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/suggestion_screen_title"
            android:name=".SuggestionActivity" >
        </activity>
        <activity
            android:label="@string/mainmenu_screen_title"
            android:name=".MainMenuActivity" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".OfferListActivity" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>